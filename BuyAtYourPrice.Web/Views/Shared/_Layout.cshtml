<!DOCTYPE html>
<html>
<head>
    <title>Buy At Your Price</title>
    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/require.js")" type="text/javascript"> </script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js" type="text/javascript"> </script>
    <script src="https://raw.github.com/SteveSanderson/knockout.mapping/master/build/output/knockout.mapping-latest.js" type="text/javascript"> </script>

    <script src="https://raw.github.com/douglascrockford/JSON-js/master/json2.js" type="text/javascript"> </script>
</head>
<body>
    <div id="header">
        <div id="inner-header">
            <a href="@Url.Action("Index", "Home")">logo</a>
            @*  *@
            @if (User != null && User.Identity.IsAuthenticated)
            {
                    @Html.Partial("CustomerMenu")
            }
            else
            {
                <div id="log-in-drop-down">
                    <div class="drop-down-left-cap">
                    </div>
                    <div class="text">
                        <a id="login" href="#" style="color: #4D4D4D;">Log In</a>
                    </div>
                    <div id="log-in-drop-down-arrow">
                    </div>
                    <div class="drop-down-right-cap">
                    </div>
                </div>
                <div style="display: none; height: 110px; visibility: visible; right: 0px; top: 31px;"
                    id="log-in-drop-down-contents">
                    @Html.Partial("Login", new BuyAtYourPrice.Web.Models.LoginModel())
                </div>
                <div class="sign-up-btn">
                    <div class="sign-up-btn-left-cap">
                    </div>
                    <div class="text">
                        <a href="@Url.Action("SignUp", "Account")">Sign Up</a>
                    </div>
                    <div class="sign-up-btn-right-cap">
                    </div>
                </div>
@* <div id="loginMenu" style="display: block; height: 110px; visibility: visible; left: 1030px; top: 31px;">
                <label>username</label>
                <input type="text" />
            </div>*@
            }
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
    </div>
    <script type="text/javascript"> </script>
</body>
</html>
